{% extends base %}

{% block head %}
    {% block title %} <title>Login</title> {% endblock %}
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="SRC/CSS/index.css">
    {% endblock %}
{% endblock %}

{% block body %}

    <section class="content">
        <article class="contentImage">
            <img src="Public/Image/draw2.webp" alt="image of login">
        </article>


        <form action="{{ handle }}" method="POST" enctype="multipart/form-data" class="form">
            <div class="control-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required placeholder="Username o email" autocomplete="false">
            </div>
            <div class="control-group">
                <label for=" password">Password</label>
                <input type="password" name="password" id="password" required placeholder="Your password" autocomplete="false">
            </div>
            <div class="control-group">
                <input type="submit" value="Login" name="Login">
                <input type="submit" value="Register" name="Register">
            </div>
        </form>
    </section>
{% endblock body %}